        div Cotenido
        div(class="menu")
            mixin listasMenu(num,nombre,clase="")
                ul(class="menulista "+clase)
                    -for(var g=1; g <= num; g++)
                        li 
                            a(href="#") #{nombre} #{g}
            +listasMenu(4,'Menu')
            +listasMenu(2,'sudmenus', 'lista2')
